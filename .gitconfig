[core]
    #pager = less -+$LESS -FRX
    pager = diff-so-fancy | less --tabs=4 -FRX
    compression = 9#
    hooksPath = ~/.config/git/template/hooks
    excludesfile = ~/.config/git/gitignore_global
    attributesfile = ~/.config/git/gitattributes
[init]
    templateDir = /var/empty
    templateDir = ~/.config/git/template/hooks
	defaultBranch = master
[push]
    default = simple
[pull]
    ff = only
[diff]
    renames = copies
[merge]
    log = true
[log]
    decorate = auto
[merge "wiggle"]
	name = "Wiggle flexible merging"
	driver = wiggle -o %A %A %O %B
	recursive = binary
[mergetool "wiggle"]
	cmd = wiggle -B -o $MERGED $LOCAL $BASE $REMOTE
[difftool "wiggle"]
	cmd = wiggle -Bd $LOCAL $REMOTE
[submodule]
	recurse = true
# Convert https => ssh
[url "git@github.com:"]
	insteadOf = https://github.com/
[gpg]
    program = /usr/bin/gpg2

[alias]
    l = log --pretty='format:%h %s%d' -n 20 --graph
	alias = "!git config -l | sed -n 's/^alias\\.//p'"
	which = "!_() { git config --global --get alias.$1;};_"
	st = status -s -uno
	stu = status -s -unormal
	ix = diff --cached
	d = diff -c HEAD
	tree = log --oneline --decorate --graph
	lg = log --date=short --pretty='%cd %h%d %s'
	lop = log -p
	puff = pull --ff-only
	pura = pull --rebase --autostash
	up = pull --rebase --autostash
	sprunge = "!_(){ git format-patch --stdout \"$@\" |curl -sF 'sprunge=<-' http://sprunge.us ;}; _"
	mlist = "!git diff --name-only --diff-filter=U"
	rank = shortlog -sn --no-merges
	ls = ls-files

[color]
	ui = true
    branch = yes
    pager = yes
    diff = auto
    status = auto
    interactive = always
[color "branch"]
    current = green
    local = yellow
    remote  = cyan
[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
[color "interactive"]
    error = red bold
[color "status"]
    header = magenta
    added = yellow
    changed = green
    untracked = cyan
