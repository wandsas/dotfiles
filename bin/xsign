#!/bin/sh
#
# Sign all compiled xbps packages in hostdir/binpkgs
#


printf "\033[0m\033[32mINFO:\033[m signing packages as user\033[1m wandsas\033[m $@\n"
export XBPS_PASSPHRASE=foobar

xbps-rindex --sign-pkg --signedby "wandsas" \
    --privkey $HOME/.ssh/id_void.pem \
    $HOME/void-packages/hostdir/binpkgs/*.xbps
